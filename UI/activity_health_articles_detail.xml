<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/back1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthArticlesDetailActivity">

    <ImageView
        android:id="@+id/HealthBuddy"
        android:layout_width="409dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewHADTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/healthbuddy" />

    <TextView
        android:id="@+id/textViewHADTitle"
        android:layout_width="393dp"
        android:layout_height="52dp"
        android:layout_below="@id/HealthBuddy"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="455dp"
        android:text="Health Articles"
        android:textAlignment="center"
        android:textColor="#fff777"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBackHAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewHAD"
        android:layout_width="377dp"
        android:layout_height="458dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBackHAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHADTitle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/health1" />

    <Button
        android:id="@+id/buttonBackHAD"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>