<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookAppointmentActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/editTextLTBAppAddress"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginBottom="312dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1ABAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAppFullName"
        app:layout_constraintVertical_bias="0.161" />

    <EditText
        android:id="@+id/editTextLTBAPPContactNumber"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:drawableLeft="@drawable/fees"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Fees"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1ABAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBPinCode"
        app:layout_constraintVertical_bias="0.16" />

    <EditText
        android:id="@+id/editTextLTBPinCode"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:drawableLeft="@drawable/contact_number"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1ABAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAppAddress"
        app:layout_constraintVertical_bias="0.162" />

    <EditText
        android:id="@+id/editTextLTBAppFullName"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1ABAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLTBBookApp"
        app:layout_constraintVertical_bias="0.008" />

    <TextView
        android:id="@+id/textViewLTBBookApp"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="Book Appointment"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonBookAppointment"
        android:layout_width="251dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:text="Book Apointment"
        android:textColorLink="#B39797"
        app:layout_constraintBottom_toTopOf="@+id/buttonAppBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.738" />

    <Button
        android:id="@+id/buttonAppBack"
        android:layout_width="251dp"
        android:layout_height="41dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#41E91E63"
        android:text="BACK"
        android:textColorLink="#B39797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.948" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="401dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/healthbuddy" />

    <TextView
        android:id="@+id/textViewBMCartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonBMCartSelectDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewCartTime"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.902" />

    <TextView
        android:id="@+id/textViewCartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonCartSelectTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.904" />

    <Button
        android:id="@+id/buttonBMCartSelectDate"
        style="?android:spinnerStyle"
        android:layout_width="154dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:text="DD/MM/YYYY"
        app:layout_constraintBottom_toTopOf="@+id/buttonBookAppointment"
        app:layout_constraintEnd_toStartOf="@+id/buttonCartSelectTime"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.395" />

    <Button
        android:id="@+id/buttonCartSelectTime"
        style="?android:spinnerStyle"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/buttonBookAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLTBAPPContactNumber"
        app:layout_constraintVertical_bias="0.386" />

</androidx.constraintlayout.widget.ConstraintLayout>